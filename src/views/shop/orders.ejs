</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% if(orders.length) { %>
    <ul>
      <% orders.forEach(order => { %>
      <li># <%=order._id%></li>
      <ul>
        <% order.items.forEach(product => { %>
        <li><%=product.title%></li>
        <li><%=product.quantity%></li>
        <% }) %>
      </ul>
      <% }) %>
    </ul>
    <% } else { %>
    <h1>Orders Not Found!</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>